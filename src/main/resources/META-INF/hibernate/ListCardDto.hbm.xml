<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.q9029.starstrade.repository.dto">

	<class name="ListCardDto" table="lists_cards">
		<id name="id">
			<column name="id"/>
		</id>
		<property name="listId">
			<column name="list_id"/>
		</property>
		<property name="cardId">
			<column name="card_id"/>
		</property>
		<property name="message">
			<column name="message"/>
		</property>
		<property name="quantity">
			<column name="quantity"/>
		</property>
		<property name="displayOrder">
			<column name="display_order"/>
		</property>
		<property name="valid">
			<column name="valid"/>
		</property>
		<property name="createdAt">
			<column name="created_at"/>
		</property>
		<property name="modifiedAt">
			<column name="modified_at"/>
		</property>
	</class>

	<query name="VolumeCardsDao.loadAll">
		<![CDATA[
			from
				ListCardDto l
			where
				l.valid = true
		]]>
	</query>

</hibernate-mapping>
