<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.q9029.aikatsustars.dto">

	<class name="AccountDto" table="accounts">
		<id name="id">
			<column name="id"/>
		</id>
		<property name="name">
			<column name="name"/>
		</property>
		<property name="screenName">
			<column name="screen_name"/>
		</property>
		<property name="accessToken">
			<column name="access_token"/>
		</property>
		<property name="accessTokenSecret">
			<column name="access_token_secret"/>
		</property>
		<property name="valid">
			<column name="valid"/>
		</property>
		<property name="administrative">
			<column name="administrative"/>
		</property>
		<property name="createdAt">
			<column name="created_at"/>
		</property>
		<property name="modifiedAt">
			<column name="modified_at"/>
		</property>
	</class>

	<query name="AccountsDao.loadAll">
		<![CDATA[
			from
				Account a
			where
				a.valid = ture
		]]>
	</query>

	<query name="AccountsDao.findById">
		<![CDATA[
			from
				Account a
			where
				a.id = :id
		]]>
	</query>

</hibernate-mapping>
