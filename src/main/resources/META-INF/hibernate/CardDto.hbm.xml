<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.q9029.starstrade.repository.dto">

	<class name="CardDto" table="cards">
		<id name="id">
			<column name="id"/>
		</id>
		<id name="brandId">
			<column name="brand_id"/>
		</id>
		<property name="no">
			<column name="no"/>
		</property>
		<property name="name">
			<column name="name"/>
		</property>
		<property name="rarerity">
			<column name="rarerity"/>
		</property>
		<property name="url">
			<column name="url"/>
		</property>
		<property name="valid">
			<column name="valid"/>
		</property>
		<property name="createdAt">
			<column name="created_at"/>
		</property>
		<property name="modifiedAt">
			<column name="modified_at"/>
		</property>
	</class>

	<query name="CardsDao.loadAll">
		<![CDATA[
			from
				CardDto c
			where
				c.valid = true
		]]>
	</query>
	<query name="CardsDao.findById">
		<![CDATA[
			from
				CardDto c
			where
				c.id = :id
		]]>
	</query>

</hibernate-mapping>
