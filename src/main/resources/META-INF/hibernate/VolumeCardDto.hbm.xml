<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.q9029.starstrade.repository.dto">

	<class name="VolumeCardDto" table="volumes_cards">
		<id name="id">
			<column name="id"/>
		</id>
		<property name="volumeId">
			<column name="volume_id"/>
		</property>
		<property name="cardId">
			<column name="card_id"/>
		</property>
		<property name="displayOrder">
			<column name="display_order"/>
		</property>
		<property name="valid">
			<column name="valid"/>
		</property>
		<property name="createdAt">
			<column name="created_at"/>
		</property>
		<property name="modifiedAt">
			<column name="modified_at"/>
		</property>
	</class>

	<query name="VolumeCardsDao.loadAll">
		<![CDATA[
			from
				VolumeCardDto v, CardDto c
			where
				v.cardId = c.id
			and
				v.valid = true
			and
				v.volumeId = :volumeId
		]]>
	</query>
	<!--
			order by
				v.displayOrder
	-->

</hibernate-mapping>
