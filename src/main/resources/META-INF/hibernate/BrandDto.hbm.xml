<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.github.q9029.aikatsustars.repository.dto">

	<class name="BrandDto" table="brands">
		<id name="id">
			<column name="id"/>
		</id>
		<property name="name">
			<column name="name"/>
		</property>
		<property name="displayOrder">
			<column name="display_order"/>
		</property>
		<property name="valid">
			<column name="valid"/>
		</property>
		<property name="createdAt">
			<column name="created_at"/>
		</property>
		<property name="modifiedAt">
			<column name="modified_at"/>
		</property>
	</class>

	<query name="BrandsDao.loadAll">
		<![CDATA[
			from
				BrandDto b
			where
				b.valid = ture
			order by
				b.displayOrder
		]]>
	</query>

</hibernate-mapping>
